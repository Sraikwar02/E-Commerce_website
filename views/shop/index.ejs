<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product-list.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
    <main>
        <section class="shopBody">
            <% if(prods.length>0) { %>
                <% for(let Product of prods) {%>
                    <article class="card">
                        <h1>
                            <%= Product.title %>
                        </h1>
                        <img src="/<%= Product.imageUrl %>" alt="<%= Product.title %>">
                        <h3>$<%= Product.price %></h3>
                        <p>Dis: <%= Product.description %></p>
                        <% if(isAuthenticated) { %>
                            <%- include('../includes/add-to-cart',{Product:Product}) %>
                        <% } %>
                    </article> 
                <% } %> 
        </section>
        <%- include('../includes/pagination',{currentPage:currentPage,previousPage:previousPage,hasPreviousPage:hasPreviousPage,hasNextPage:hasNextPage,lastPage:lastPage}) %>
                <% } else { %>
        <h1>No Products found</h1>
        <% }%>

    </main>
<%- include('../includes/end.ejs') %>